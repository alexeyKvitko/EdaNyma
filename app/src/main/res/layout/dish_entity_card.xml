<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dishCardMainContainerId"
    android:layout_width="match_parent"
    android:layout_height="190dp">

    <FrameLayout
        android:id="@+id/dishCardCollapsedId"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:elevation="3dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardEntityImgId"
            android:layout_width="148dp"
            android:layout_height="142dp"
            android:layout_gravity="left|center_vertical"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="7dp">

            <ImageView
                android:id="@+id/entityImgId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="8dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="6dp">

            <TextView
                android:id="@+id/entityTitleTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="84dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/primaryTextColor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/entityDescTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="84dp"
                android:layout_marginTop="56dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="@color/grayTextColor"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="140dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/entityPriceTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_currency_rub_black_18dp"
                    android:textColor="@color/blueNeon"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".00"
                    android:textColor="@color/blueNeon"
                    android:textSize="12dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/entitySizeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="162dp"
                android:layout_marginTop="136dp"
                android:paddingHorizontal="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"
                android:textColor="@color/blueNeon"
                android:textSize="14dp" />

        </android.support.v7.widget.CardView>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/dishCardExpandedId"
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:elevation="3dp"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:id="@+id/expandedCardImgId"
            android:layout_width="148dp"
            android:layout_height="142dp"
            android:layout_gravity="left|top"
            android:layout_marginTop="24dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="7dp">

            <ImageView
                android:id="@+id/expandedImgId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="8dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/expandedTitleTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="132dp"
                    android:layout_marginLeft="162dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="8dp"
                    android:ellipsize="end"
                    android:maxLines="8"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/expandedTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_below="@+id/expandedTitleTextId"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="14dp" />

                <FrameLayout
                    android:id="@+id/wspContainerId"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_below="@+id/expandedTextId"
                    android:layout_margin="8dp"
                    android:background="@drawable/border_r36">

                    <LinearLayout
                        android:id="@+id/wspButtonId"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_neon_r18"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout style="@style/wspContainer"
                            android:id="@+id/wspLayoutOneId">

                            <TextView
                                android:id="@+id/dishSizeOneId"
                                style="@style/wspText"/>

                            <TextView
                                android:id="@+id/dishWeightOneId"
                                style="@style/wspText" />
                        </LinearLayout>

                        <LinearLayout style="@style/wspContainer"
                            android:id="@+id/wspLayoutTwoId">

                            <TextView
                                android:id="@+id/dishSizeTwoId"
                                style="@style/wspText" />

                            <TextView
                                android:id="@+id/dishWeightTwoId"
                                style="@style/wspText" />
                        </LinearLayout>

                        <LinearLayout style="@style/wspContainer"
                            android:id="@+id/wspLayoutThreeId">

                            <TextView
                                android:id="@+id/dishSizeThreeId"
                                style="@style/wspText" />

                            <TextView
                                android:id="@+id/dishWeightThreeId"
                                style="@style/wspText" />
                        </LinearLayout>

                        <LinearLayout style="@style/wspContainer"
                            android:id="@+id/wspLayoutFourId">

                            <TextView
                                android:id="@+id/dishSizeFourId"
                                style="@style/wspText" />

                            <TextView
                                android:id="@+id/dishWeightFourId"
                                style="@style/wspText" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/dishBasketId"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/expandedTextId"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginLeft="12dp"
                            android:id="@+id/dishPriceTextId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_currency_rub_black_18dp"
                            android:textColor="@color/blueNeon"
                            android:textSize="22dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=".00"
                            android:textColor="@color/blueNeon"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right">
                        <Button
                            android:id="@+id/addToBasketButtonId"
                            android:elevation="6dp"
                            android:background="@drawable/button_neon"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="18dp"
                            android:text="@string/add_to_basket"/>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>

</FrameLayout>