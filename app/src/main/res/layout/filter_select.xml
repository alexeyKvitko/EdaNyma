<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/filterTitleId"
        android:paddingVertical="8dp"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:drawableRight="@drawable/ic_menu_down_black_18dp"
        android:drawablePadding="8dp"
        android:textColor="@color/splashTextColor"
        android:textSize="18dp" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/filterButtonsContainerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filterTitleId"
        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="stretch"></com.google.android.flexbox.FlexboxLayout>


</RelativeLayout>