<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filterDishEntityContainerId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueNeon">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="478dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="81dp"
        android:background="@drawable/border_neon_18"/>
    <RelativeLayout
        android:id = "@+id/snapShotDishLayoutId"
        android:layout_width="360dp"
        android:layout_height="640dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-24dp"/>
    <ImageView
        android:id="@+id/filterAllDishesBackBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/filter_back_btn"/>
    <ScrollView
        android:id="@+id/filterAllDishesScrollId"
        android:layout_width="205dp"
        android:layout_marginTop="48dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/filterAllDishesMenuId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="26dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/filterAllDishesTitleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:text="@string/filter_title"/>
            <TextView
                android:id="@+id/filterAllDishesTextId"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/filter_dish"
                android:textSize="18dp" />
            <LinearLayout
                android:id="@+id/filterDishesListId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">
            </LinearLayout>
            <TextView
                style="@style/lightNeonTextSmall"
                android:id="@+id/filterBtnShowAllDishesId"
                android:layout_marginStart="12dp"
                android:paddingTop="4dp"
                android:background="@drawable/border_bottom"/>
            <TextView
                android:id="@+id/filterCompanyTextId"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/filter_company_label"
                android:textSize="18dp" />
            <LinearLayout
                android:id="@+id/filterCompanyListId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">
            </LinearLayout>
            <TextView
                style="@style/lightNeonTextSmall"
                android:id="@+id/filterBtnShowAllCompanyId"
                android:layout_marginStart="12dp"
                android:paddingTop="4dp"
                android:background="@drawable/border_bottom"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>