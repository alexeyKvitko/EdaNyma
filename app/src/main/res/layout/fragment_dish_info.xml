<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dishInfoContainerId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentToastBackground"
    tools:context=".fragment.DishInfoFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cardDishInfoImgId"
        android:layout_width="184dp"
        android:layout_height="176dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp">

        <ImageView
            android:id="@+id/dishInfoImgId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/dishInfoCardId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dishInfoCompanyId"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/ic_restaurant_blue_18dp"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/grayTextColor"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dishInfoKitchenId"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:drawableLeft="@drawable/ic_room_service_outline_blue_18dp"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/grayTextColor"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dishInfoCategoryId"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:drawableLeft="@drawable/ic_fastfood_blue_18dp"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/grayTextColor"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="146dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dishInfoTitleTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_horizontal"
                android:textColor="@color/primaryTextColor"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/dishInfoDescId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/tealColor"
                android:textSize="14dp" />

            <FrameLayout
                android:id="@+id/wspContainerId"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/wspLayoutOneId"
                        style="@style/wspContainer">

                        <TextView
                            android:id="@+id/dishSizeOneId"
                            style="@style/wspText" />

                        <TextView
                            android:id="@+id/dishWeightOneId"
                            style="@style/wspText" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wspLayoutTwoId"
                        style="@style/wspContainer">

                        <TextView
                            android:id="@+id/dishSizeTwoId"
                            style="@style/wspText" />

                        <TextView
                            android:id="@+id/dishWeightTwoId"
                            style="@style/wspText" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wspLayoutThreeId"
                        style="@style/wspContainer">

                        <TextView
                            android:id="@+id/dishSizeThreeId"
                            style="@style/wspText" />

                        <TextView
                            android:id="@+id/dishWeightThreeId"
                            style="@style/wspText" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wspLayoutFourId"
                        style="@style/wspContainer">

                        <TextView
                            android:id="@+id/dishSizeFourId"
                            style="@style/wspText" />

                        <TextView
                            android:id="@+id/dishWeightFourId"
                            style="@style/wspText" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wspButtonId"
                    android:layout_width="73dp"
                    android:layout_height="42dp"
                    android:background="@drawable/border_neon_r18"
                    android:orientation="horizontal"></LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/dishBasketId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dishPriceTextId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:drawableLeft="@drawable/ic_currency_rub_black_18dp"
                        android:textColor="@color/blueNeon"
                        android:textSize="22dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=".00"
                        android:textColor="@color/blueNeon"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="84dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/border_disable_r18"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/removeDishCountId"
                            style="@style/entityCount">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_minus_blue_18dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/dishCountTextId"
                            style="@style/entityCount"
                            android:text="1"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:id="@+id/addDishCountId"
                            style="@style/entityCount">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_plus_blue_18dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">

                    <Button
                        android:id="@+id/addToBasketButtonId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_neon"
                        android:elevation="6dp"
                        android:paddingHorizontal="18dp"
                        android:text="@string/add_to_basket"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/dishSumId"
                style="@style/grayTextSmall"
                android:layout_marginLeft="24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/grayTextColor" />

            <TextView
                android:id="@+id/dishInfÐ¾BackId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:text="@string/back_label"
                android:textColor="@color/blueNeon"
                android:textSize="14dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>