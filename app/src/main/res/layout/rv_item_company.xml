<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/companyCardId"
    android:layout_width="match_parent"
    android:layout_height="254dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCompanyImgId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="5dp">

            <ImageView
                android:id="@+id/companyImgId"
                android:layout_width="268dp"
                android:layout_height="148dp" />
            <ImageView
                android:id="@+id/companyFavoriteId"
                android:visibility="gone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left|top"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/ic_favorite_enable_24dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="16dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="72dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:layout_weight="4.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cardCompanyTitleId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/primaryTextColor"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/cardCompanyDeliCashId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/searchTextColor"
                    android:textSize="14dp" />

                <LinearLayout
                    android:id="@+id/cardTotalFeedbackId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cardFeedbackCompanyRateId"
                        android:layout_width="64dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="4dp"
                        app:srcCompat="@drawable/five_star_00" />

                    <TextView
                        android:id="@+id/cardCompanyStarId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/searchTextColor"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:layout_weight="5.5"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cardCompanyDeliTimeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:drawableLeft="@drawable/baseline_timer_black_18"
                    android:drawablePadding="4dp"
                    android:textColor="@color/blueNeon"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/cardCompanyWorkId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/iconGrayColor"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/cardCompanyWorkWeekId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/iconGrayColor"
                    android:textSize="11dp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>