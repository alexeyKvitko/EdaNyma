<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"

        android:orientation="vertical">

        <TextView
            android:id="@+id/splashTextOneId"
            style="@style/splashText"
            android:layout_marginStart="48dp"
            android:layout_marginTop="40dp"
            android:gravity="start"
            android:text="@string/splash_crimean" />

        <ImageView
            android:id="@+id/splashLogoId"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:elevation="10dp"
            app:srcCompat="@drawable/yummy_logo" />

        <TextView
            android:id="@+id/splashTextTwoId"
            style="@style/splashText"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:gravity="start"
            android:text="@string/splash_service" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/splashTextSmallOneId"
                style="@style/splashTextSmall"
                android:drawableStart="@drawable/ic_emog_good_24dp"
                android:drawablePadding="8dp"
                android:text="@string/splash_desc_one" />

            <TextView
                android:id="@+id/splashTextSmallTwoId"
                style="@style/splashTextSmall"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/ic_emog_easy_24dp"
                android:drawablePadding="8dp"
                android:text="@string/splash_desc_two" />

            <TextView
                android:id="@+id/splashTextSmallThreeId"
                style="@style/splashTextSmall"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/ic_emog_yummy_24dp"
                android:drawablePadding="8dp"
                android:text="@string/splash_desc_three" />

        </LinearLayout>

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/fluid_loader" />
    </LinearLayout>
</LinearLayout>

