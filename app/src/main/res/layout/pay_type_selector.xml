<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/border_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/clientPayTypeCashId"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:background="@drawable/border_disable_r18"
            android:gravity="center"
            android:text="@string/cash_label"
            android:textColor="@color/blueNeon"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/clientPayTypeWalletId"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/border_disable_r18"
            android:gravity="center"
            android:text="@string/online_label"
            android:textColor="@color/iconGrayColor"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payTypeBtnId"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/border_neon_r18"
        android:orientation="horizontal" />
</FrameLayout>