<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageDialogLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    android:orientation="vertical"
    android:background="@color/transparentToastBackground">
    <android.support.v7.widget.CardView
        android:id="@+id/messageDialogContainerId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-12dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="7dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/modalDialogButtonsId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:id="@+id/modalDialogCardBlueId"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/blueNeon"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">
                    <TextView
                        android:id="@+id/modalDialogBlueBtnId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:drawablePadding="6dp"
                        android:layout_gravity="center"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:id="@+id/modalDialogCardWhiteId"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="145dp"
                    android:layout_height="120dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">
                    <TextView
                        android:id="@+id/modalDialogWhiteBtnId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/iconGrayColor"
                        android:drawablePadding="4dp"
                        android:textSize="16dp"
                        android:layout_gravity="center"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/modalDialogTitleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:textColor="@color/splashTextColor"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/modalDialogMessageId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:gravity="center_horizontal"
            android:textColor="@color/iconGrayColor"
            android:textSize="16dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>