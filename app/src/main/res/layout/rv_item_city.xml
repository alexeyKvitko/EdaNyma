<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="23dp"
    android:orientation="horizontal">
    <FrameLayout
        android:layout_width="94dp"
        android:layout_height="106dp">
        <ImageView
            android:id="@+id/leftCityImgId"
            android:layout_gravity="center_horizontal|top"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:elevation="8dp"
            app:srcCompat="@drawable/alupka"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="left|bottom"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="6dp">
            <TextView
                style="@style/cityText"
                android:id="@+id/leftCityTextId"
                android:text="Алупка"/>
        </android.support.v7.widget.CardView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="94dp"
        android:layout_height="106dp"
        android:layout_marginLeft="16dp">
        <ImageView
            android:id="@+id/centerCityImgId"
            android:layout_gravity="center_horizontal|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:srcCompat="@drawable/alushta"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="left|bottom"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="6dp">
            <TextView
                style="@style/cityText"
                android:id="@+id/centerCityTextId"
                android:text="Алушта"/>
        </android.support.v7.widget.CardView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="94dp"
        android:layout_height="106dp"
        android:layout_marginLeft="16dp">
        <ImageView
            android:id="@+id/rightCityImgId"
            android:layout_gravity="center_horizontal|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:srcCompat="@drawable/armyansk"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="left|bottom"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="6dp">
            <TextView
                style="@style/cityText"
                android:id="@+id/rightCityTextId"
                android:text="Армянск"/>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</LinearLayout>