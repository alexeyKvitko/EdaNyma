<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/companyContainerId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_light"
    android:fitsSystemWindows="true"
    tools:context="com.edanyma.activity.CompanyActivity">

    <include layout="@layout/header" />
    <include layout="@layout/footer" />

    <RelativeLayout
        android:id="@+id/companyBodyContainerId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="@dimen/fragment_margin_top"
        android:layout_marginBottom="@dimen/fragment_margin_bottom"
        app:layout_constraintTop_toBottomOf="@+id/mainHeaderId">
        <android.support.v7.widget.SearchView
            android:id="@+id/searchCompanyId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.SearchView>
        <TextView
            android:id="@+id/companyTitleId"
            android:layout_below="@+id/searchCompanyId"
            style="@style/cityTitleText"
            android:layout_marginTop="12dp"
            android:text="Все заведения" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="32dp"
        android:background="@color/grayTextColor"
        app:layout_constraintTop_toTopOf="@+id/bottomNavigationId" />



</android.support.constraint.ConstraintLayout>