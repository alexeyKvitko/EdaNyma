<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/companyContainerId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_light"
    android:fitsSystemWindows="true"
    tools:context="com.edanyma.activity.CompanyActivity">

    <include layout="@layout/header" />
    <include layout="@layout/footer" />

    <RelativeLayout
        android:id="@+id/companyBodyContainerId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/fragment_margin_top"
        android:layout_marginBottom="@dimen/fragment_margin_bottom"
        app:layout_constraintTop_toBottomOf="@+id/mainHeaderId">
        <com.edanyma.owncomponent.OwnSearchView
            android:id="@+id/searchCompanyId"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="64dp"></com.edanyma.owncomponent.OwnSearchView>
        <TextView
            android:id="@+id/companyTitleId"
            android:layout_below="@+id/searchCompanyId"
            android:layout_marginLeft="24dp"
            style="@style/cityTitleText"
            android:layout_marginTop="8dp"
            android:text="@string/all_company_label" />
        <FrameLayout
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_below="@+id/companyTitleId"
            android:layout_marginTop="18dp"
            android:layout_height="246dp"
            android:layout_width="match_parent"
            android:id="@+id/companyCardId">
            <android.support.v7.widget.CardView
                android:id="@+id/cardCompanyImgId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="5dp">
                <ImageView
                    android:id="@+id/companyImgId"
                    android:layout_width="268dp"
                    android:layout_height="148dp"
                    app:srcCompat="@drawable/fidele"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="74dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="72dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4.5"
                        android:layout_marginLeft="24dp"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/cardCompanyTitleId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:textSize="20dp"
                            android:textColor="@color/primaryTextColor"
                            android:text="FIDELE"/>
                        <TextView
                            android:id="@+id/cardCompanyCountId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/searchTextColor"
                            android:textSize="14dp"
                            android:text="от 410 руб."/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                style="@style/foolStar"/>
                            <ImageView
                                style="@style/foolStar"/>
                            <ImageView
                                style="@style/foolStar"/>
                            <ImageView
                                style="@style/foolStar"/>
                            <ImageView
                                style="@style/foolStar"/>
                            <TextView
                                android:id="@+id/cardCompanyStarId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/searchTextColor"
                                android:layout_gravity="center_vertical"
                                android:textSize="14dp"
                                android:text="4,9 (127)"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5.5"
                        android:layout_marginRight="24dp"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/cardCompanyDeliId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/baseline_timer_black_18"
                            android:drawablePadding="4dp"
                            android:layout_marginTop="18dp"
                            android:textColor="@color/blueNeon"
                            android:textSize="14dp"
                            android:text="~ 60 мин."/>
                        <TextView
                            android:id="@+id/cardCompanyWorkId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/iconGrayColor"
                            android:layout_marginTop="8dp"
                            android:textSize="11dp"
                            android:text="Пн-Чт с 11.00 - 24.00"/>
                        <TextView
                            android:id="@+id/cardCompanyWorkWeekId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/iconGrayColor"
                            android:layout_marginTop="6dp"
                            android:textSize="11dp"
                            android:text="Пт-Вс с 09.00 - 24.00"/>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </FrameLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="24dp"
        android:background="@color/grayTextColor"
        app:layout_constraintTop_toTopOf="@+id/bottomNavigationId" />



</android.support.constraint.ConstraintLayout>